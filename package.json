{
  "name": "chat-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "dotenv -- fastify start -l info dist/app.js",
    "prisma:deploy": "prisma migrate deploy",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "dotenv -- npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App,CopyTemplates\" -c \"yellow.bold,cyan.bold,blue.bold\" \"npm:watch:ts\" \"npm:dev:start\" \"npm:watch:cp-templates\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "cp-templates": "copyfiles -f src/**/*.ejs dist/modules/mail/templates",
    "watch:cp-templates": "nodemon --watch src -e .ejs --exec \"npm run cp-templates\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@joggr/fastify-prisma": "^7.0.0",
    "@prisma/client": "^7.3.0",
    "ajv-errors": "^3.0.0",
    "bcrypt": "^6.0.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^11.0.0",
    "ejs": "^4.0.1",
    "fastify": "^5.7.2",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.23",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/ejs": "^3.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.1.0",
    "@types/sinon": "^21.0.0",
    "@types/tap": "^18.0.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "fastify-tsconfig": "^3.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "sinon": "^21.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.9.3"
  }
}
